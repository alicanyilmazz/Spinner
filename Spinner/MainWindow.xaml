<Window x:Class="Spinner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spinner"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Background="#FF1E1E1E"
        Title="MainWindow"   Height="350" Width="525"
       
        WindowStartupLocation="CenterScreen">


    <Window.Resources>
        <LinearGradientBrush x:Key="SnakeStrokeBrush"
                         StartPoint="0,0" EndPoint="1,0"
                         MappingMode="RelativeToBoundingBox">
            <!-- Kenarlar: ortaya daha yakın (daha açık) -->
            <GradientStop Color="#00C4FF" Offset="0.0"/>

            <!-- Ortaya yaklaşırken: iyice yaklaşmış açık mavi -->
            <GradientStop Color="#00D8FF" Offset="0.25"/>

            <!-- ORTAYA YAKIN GLOW -->
            <GradientStop Color="#40F0FF" Offset="0.40"/>

            <!-- TAM FOSFORLU MERKEZ -->
            <GradientStop Color="#80FAFF" Offset="0.50"/>

            <!-- Glow’dan tekrar geri -->
            <GradientStop Color="#40F0FF" Offset="0.60"/>
            <GradientStop Color="#00D8FF" Offset="0.75"/>

            <!-- Sağ kenar: yine ortaya yakın -->
            <GradientStop Color="#00C4FF" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Resources>



    <Grid Background="#FF1E1E1E">
        <Canvas x:Name="RootCanvas" Margin="40">
            <!-- Arka border -->
            <Path x:Name="BaseBorderPath"
      Stroke="#FF17B2E6"
      StrokeThickness="1"
      StrokeLineJoin="Round"
      Fill="Transparent" />

            <!-- YUVARLAK KÖŞELİ, ORTASI KALIN UÇLARI İNCE YILAN -->
            <Path x:Name="SnakePath"
                  Fill="{StaticResource SnakeStrokeBrush}"
                  StrokeThickness="0"
                  StrokeLineJoin="Round" />
        </Canvas>
    </Grid>
</Window>
